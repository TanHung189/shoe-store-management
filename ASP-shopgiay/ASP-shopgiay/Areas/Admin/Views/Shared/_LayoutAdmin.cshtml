<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>

    <!-- Link Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Link Font Awesome (cho icon) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        /* CSS đơn giản cho Sidebar */
        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40; /* Màu nền tối */
            color: white;
            flex-shrink: 0;
        }

            .sidebar a {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                display: block;
                padding: 1rem;
            }

                .sidebar a:hover {
                    color: white;
                    background-color: #495057;
                }

            .sidebar .nav-link.active {
                color: white;
                font-weight: bold;
                background-color: #0d6efd; /* Màu xanh active */
            }

            .sidebar .nav-link .fa-fw {
                margin-right: 0.5rem;
            }

        .content {
            flex-grow: 1;
            padding: 2rem;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <!-- === SIDEBAR === -->
    <div class="d-flex flex-column flex-shrink-0 p-3 sidebar">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4"><i class="fas fa-store me-2"></i>ShopGiay Admin</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <!-- Thêm asp-action và asp-controller để tự động active link -->
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="fas fa-tachometer-alt fa-fw"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="DanhMuc" asp-action="Index" class="nav-link">
                    <i class="fas fa-list fa-fw"></i>
                    Quản lý Danh Mục
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="nav-link">
                    <i class="fas fa-shoe-prints fa-fw"></i>
                    Quản lý Sản Phẩm
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Hoadon" asp-action="Index" class="nav-link">
                    <i class="fas fa-file-invoice fa-fw"></i>
                    Quản lý Đơn Hàng
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Taikhoan" asp-action="Index" class="nav-link">
                    <i class="fas fa-users fa-fw"></i>
                    Quản lý Tài Khoản
                </a>
            </li>
        </ul>
        <hr>
        <div>
            <!-- Form Đăng xuất (an toàn hơn là dùng link GET) -->
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    Đăng xuất
                </button>
            </form>
        </div>
    </div>

    <!-- === NỘI DUNG CHÍNH (CONTENT) === -->
    <main class="content">
        <!-- Đây là nơi các View con (như Index.cshtml) sẽ được render -->
        @RenderBody()
    </main>

    <!-- Link Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script render body (nếu cần) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>