@model ASP_shopgiay.Models.Taikhoan

@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white">
            <h5 class="m-0 font-weight-bold">Chi tiết tài khoản: @Model.Ten</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Họ và Tên:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Ten)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DienThoai)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == true)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã khóa</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Quyền hạn (ID):</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Html.DisplayFor(model => model.MaCvNavigation.MaCv)</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.MaTk" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>