@model ASP_shopgiay.ViewModels.LoginViewModel
@{
    Layout = "_AccountLayout"; // <-- Dùng Layout 2 cột đã tạo
    ViewData["Title"] = "Đăng nhập";
}

<div class="row g-0">
    @* Loại bỏ khoảng cách giữa các cột *@

    @* CỘT 1 (BÊN TRÁI): PANEL MÀU (Gợi ý Đăng ký) *@
    <div class="col-md-5 right-panel">
        <h1>Chào mừng trở lại!</h1>
        <p class="mt-3 mb-4">Chưa có tài khoản?</p>
        <a asp-action="Register" class="btn btn-outline-light rounded-pill px-4 py-2">ĐĂNG KÝ</a>
    </div>

    @* CỘT 2 (BÊN PHẢI): FORM ĐĂNG NHẬP (Trang Trắng) *@
    <div class="col-md-7 left-panel">
        <h1 class="mb-4">Đăng nhập</h1>
        <p class="text-muted mb-4">Truy cập bằng tài khoản email của bạn</p>

        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            @* Hiển thị lỗi chung (Email/pass sai) *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="visually-hidden"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="MatKhau" class="visually-hidden"></label>
                <div class="input-group">
                    @* Ô nhập mật khẩu *@
                    <input asp-for="MatKhau" class="form-control" placeholder="Mật khẩu" />
                    @* Nút mắt (Show/Hide Password) *@
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                        <i class="bi bi-eye" id="togglePasswordIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2" style="background-color: #ff3c69; border: none;">ĐĂNG NHẬP</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // --- Code JavaScript cho "con mắt" (Show/Hide Password) ---
        // Chỉ cần cho một ô Mật khẩu
        $(document).ready(function() {
            $("#togglePassword").click(function() {
                var passwordInput = $("#MatKhau");
                var icon = $("#togglePasswordIcon");

                if (passwordInput.attr("type") === "password") {
                    passwordInput.attr("type", "text");
                    icon.removeClass("bi-eye").addClass("bi-eye-slash");
                } else {
                    passwordInput.attr("type", "password");
                    icon.removeClass("bi-eye-slash").addClass("bi-eye");
                }
            });
        });
    </script>
}