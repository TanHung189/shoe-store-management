@model ASP_shopgiay.Models.Taikhoan

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50 py-10">
    <div class="container mx-auto px-4 max-w-3xl">
        <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
            <div class="bg-indigo-600 h-32 relative">
                <div class="absolute -bottom-12 left-8">
                    <img src="https://ui-avatars.com/api/?name=@Model.Ten&background=random&size=128"
                         class="w-24 h-24 rounded-full border-4 border-white shadow-md bg-white">
                </div>
            </div>

            <div class="pt-16 px-8 pb-8">
                <h1 class="text-2xl font-bold text-gray-900">@Model.Ten</h1>
                <p class="text-gray-500">Thành viên thân thiết</p>

                <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="p-4 bg-gray-50 rounded-xl border border-gray-100">
                        <p class="text-xs text-gray-500 uppercase font-bold mb-1">Email đăng ký</p>
                        <p class="text-gray-900 font-medium flex items-center">
                            <i class="fas fa-envelope text-indigo-400 mr-2"></i> @Model.Email
                        </p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-xl border border-gray-100">
                        <p class="text-xs text-gray-500 uppercase font-bold mb-1">Số điện thoại</p>
                        <p class="text-gray-900 font-medium flex items-center">
                            <i class="fas fa-phone text-green-500 mr-2"></i> @(Model.DienThoai ?? "Chưa cập nhật")
                        </p>
                    </div>
                </div>

                <div class="mt-8 flex gap-3">
                    <a href="@Url.Action("History", "Order")" class="px-6 py-2 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition shadow-sm">
                        Xem đơn hàng
                    </a>
                    <button class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition">
                        Đổi mật khẩu
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>