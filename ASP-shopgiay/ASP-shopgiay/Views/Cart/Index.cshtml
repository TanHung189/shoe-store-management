@model ASP_shopgiay.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "_Layout";
}

<style>
    /* Ẩn nút tăng giảm mặc định của input number */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    /* Màn hình chờ khi xử lý */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7);
        z-index: 9999;
        display: none;
        justify-content: center;
        align-items: center;
    }
</style>

<!-- Loading Overlay -->
<div id="cart-loading" class="loading-overlay">
    <div class="text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto mb-3"></div>
        <p class="text-indigo-700 font-semibold">Đang xử lý...</p>
    </div>
</div>

<div class="bg-gray-50 min-h-screen py-8">
    <div class="container mx-auto px-4">

        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
                <i class="fas fa-shopping-cart text-indigo-600"></i>
                Giỏ Hàng <span class="text-sm font-normal text-gray-500 ml-2">(@Model.Items.Sum(i => i.SoLuong) sản phẩm)</span>
            </h1>
            <a href="@Url.Action("List", "Product")" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium flex items-center gap-1 transition">
                <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
            </a>
        </div>

        <!-- Thông báo Server (TempData) -->
        @if (TempData["Success"] != null)
        {
            <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg shadow-sm flex items-center gap-3">
                <i class="fas fa-check-circle text-green-500"></i><p class="text-green-800 font-medium">@TempData["Success"]</p>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg shadow-sm flex items-center gap-3">
                <i class="fas fa-exclamation-circle text-red-500"></i><p class="text-red-800 font-medium">@TempData["Error"]</p>
            </div>
        }

        @if (Model.Items.Any())
        {
            <div class="flex flex-col lg:flex-row gap-8">

                <!-- CỘT TRÁI: DANH SÁCH SẢN PHẨM -->
                <div class="lg:w-3/4">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">

                        <!-- Desktop Header -->
                        <div class="hidden md:grid grid-cols-12 gap-4 bg-gray-50/50 px-6 py-4 border-b border-gray-100 text-xs font-bold text-gray-500 uppercase tracking-wider">
                            <div class="col-span-6">Thông tin sản phẩm</div>
                            <div class="col-span-2 text-center">Đơn giá</div>
                            <div class="col-span-2 text-center">Số lượng</div>
                            <div class="col-span-2 text-right">Thành tiền</div>
                        </div>

                        <!-- List Items -->
                        <div class="divide-y divide-gray-100">
                            @foreach (var item in Model.Items)
                            {
                                <div class="p-6 hover:bg-gray-50/50 transition duration-200">
                                    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 items-center">

                                        <!-- Info -->
                                        <div class="md:col-span-6 flex gap-5">
                                            <div class="w-24 h-24 flex-shrink-0 bg-white rounded-xl border border-gray-200 overflow-hidden relative group">
                                                @{
                                                    string imgUrl = item.HinhAnh;
                                                    if (!string.IsNullOrEmpty(imgUrl) && !imgUrl.StartsWith("http") && !imgUrl.StartsWith("/")) { imgUrl = $"/images/products/{imgUrl}"; }
                                                }
                                                <img src="@imgUrl" class="w-full h-full object-cover object-center group-hover:scale-110 transition duration-500" onerror="this.src='https://placehold.co/150x150?text=No+Image';">
                                            </div>
                                            <div class="flex flex-col justify-center">
                                                <div class="text-xs font-bold text-indigo-500 uppercase tracking-wide mb-1">@item.TenThuongHieu</div>
                                                <a href="@Url.Action("Detail", "Product", new { productId = item.MaBienThe })" class="text-base font-bold text-gray-900 hover:text-indigo-600 transition line-clamp-1 mb-1">@item.TenSanpham</a>
                                                <div class="flex flex-wrap gap-2 mt-1">
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-800">Màu: @item.TenMau</span>
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-800">Size: @item.TenKichThuoc</span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Đơn giá -->
                                        <div class="hidden md:block md:col-span-2 text-center"><span class="text-sm font-medium text-gray-600">@item.DonGia.ToString("N0")₫</span></div>

                                        <!-- Số lượng -->
                                        <div class="md:col-span-2 flex justify-center">
                                            <form asp-action="UpdateCart" method="post" id="form-update-@item.MaGioHang" class="flex items-center">
                                                <input type="hidden" name="maGioHang" value="@item.MaGioHang" />
                                                <div class="flex items-center border border-gray-300 rounded-lg bg-white overflow-hidden shadow-sm w-28">
                                                    <button type="button" onclick="changeQty(@item.MaGioHang, -1)" class="w-8 h-9 flex items-center justify-center bg-white hover:bg-gray-100 border-r border-gray-200 text-gray-600"><i class="fas fa-minus text-xs"></i></button>
                                                    <input type="number" id="qty-@item.MaGioHang" name="soLuongMoi" value="@item.SoLuong" min="1" max="@item.SoLuongTon" class="w-full h-9 text-center border-none focus:ring-0 text-sm font-semibold text-gray-800 p-0" readonly />
                                                    <button type="button" onclick="changeQty(@item.MaGioHang, 1)" class="w-8 h-9 flex items-center justify-center bg-white hover:bg-gray-100 border-l border-gray-200 text-gray-600" @(item.SoLuong >= item.SoLuongTon ? "disabled" : "")><i class="fas fa-plus text-xs"></i></button>
                                                </div>
                                            </form>
                                        </div>

                                        <!-- Thành tiền & Xóa -->
                                        <div class="md:col-span-2 text-right flex flex-col items-end justify-center gap-3">
                                            <span class="text-indigo-600 font-bold text-lg">@item.ThanhTien.ToString("N0")₫</span>
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="maGioHang" value="@item.MaGioHang" />
                                                <button type="submit" class="text-gray-400 hover:text-red-500 transition text-sm flex items-center gap-1 group" title="Xóa"><i class="far fa-trash-alt group-hover:scale-110 transition-transform"></i></button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- CỘT PHẢI: TỔNG KẾT & VOUCHER -->
                <div class="lg:w-1/4">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 sticky top-24">
                        <h2 class="text-lg font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">Tổng đơn hàng</h2>

                        <!-- KHU VỰC NHẬP MÃ GIẢM GIÁ -->
                        <div class="mb-6 relative">
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Mã giảm giá</label>
                            <div class="flex gap-2">
                                <input type="text" id="voucher-code" placeholder="Nhập mã..."
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-indigo-500 focus:border-indigo-500 uppercase font-semibold tracking-wider" />
                                <button type="button" onclick="applyVoucher()" id="btn-apply-voucher"
                                        class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-700 transition whitespace-nowrap">
                                    Áp dụng
                                </button>
                            </div>
                            <p id="voucher-message" class="text-xs mt-2 hidden"></p>
                        </div>

                        <!-- THÔNG TIN THANH TOÁN -->
                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between text-sm text-gray-600">
                                <span>Tạm tính</span>
                                <!-- Lưu giá trị gốc vào data-value để JS tính toán -->
                                <span class="font-medium text-gray-900" id="subtotal-display" data-value="@Model.TamTinh">@Model.TamTinh.ToString("N0")₫</span>
                            </div>

                            <div class="flex justify-between text-sm text-gray-600">
                                <span>Giảm giá</span>
                                <span class="font-medium text-green-600" id="discount-display">0₫</span>
                            </div>

                            <div class="flex justify-between text-sm text-gray-600 items-center">
                                <span>Vận chuyển</span>
                                <span class="text-xs text-indigo-500 bg-indigo-50 px-2 py-1 rounded-full font-medium">Miễn phí</span>
                            </div>

                            <div class="pt-4 border-t border-gray-100 flex justify-between items-end">
                                <span class="text-base font-bold text-gray-900">Tổng cộng</span>
                                <div class="text-right">
                                    <span class="block text-2xl font-black text-indigo-600" id="total-display">@Model.TamTinh.ToString("N0")₫</span>
                                    <span class="text-[10px] text-gray-400 font-normal">(Đã bao gồm VAT)</span>
                                </div>
                            </div>
                        </div>

                        <!-- NÚT THANH TOÁN (Xử lý JS trước khi chuyển trang) -->
                        <button onclick="proceedToCheckout()" class="block w-full bg-indigo-600 text-white text-center font-bold py-4 rounded-xl shadow-lg hover:bg-indigo-700 hover:shadow-indigo-200 hover:-translate-y-0.5 transition-all duration-300 uppercase tracking-wider">
                            THANH TOÁN NGAY
                        </button>

                        <!-- ICON THANH TOÁN -->
                        <div class="mt-8 pt-6 border-t border-gray-100 text-center">
                            <p class="text-xs text-center text-gray-400 mb-3">Chúng tôi chấp nhận</p>
                            <div class="flex justify-center gap-3 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
                                <i class="fab fa-cc-visa text-2xl text-blue-900"></i>
                                <i class="fab fa-cc-mastercard text-2xl text-red-600"></i>
                                <i class="fab fa-cc-paypal text-2xl text-blue-700"></i>
                                <i class="fas fa-money-bill-wave text-2xl text-green-600"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- GIỎ HÀNG TRỐNG -->
            <div class="max-w-2xl mx-auto text-center py-16">
                <div class="w-48 h-48 bg-white rounded-full flex items-center justify-center mx-auto mb-8 shadow-sm">
                    <img src="https://cdn-icons-png.flaticon.com/512/11329/11329060.png" alt="Empty Cart" class="w-24 h-24 opacity-50 grayscale">
                </div>
                <h2 class="text-2xl font-bold text-gray-900 mb-3">Giỏ hàng của bạn đang trống</h2>
                <a href="@Url.Action("List", "Product")" class="inline-flex items-center gap-2 bg-indigo-600 text-white font-bold py-3.5 px-8 rounded-full shadow-lg hover:bg-indigo-700 transition">Mua Sắm Ngay</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // 1. HÀM HIỂN THỊ LOADING
        function showLoading() { document.getElementById('cart-loading').style.display = 'flex'; }

        // 2. HÀM TĂNG/GIẢM SỐ LƯỢNG
        function updateQuantity(itemId, change) {
            const input = document.getElementById(`qty-${itemId}`);
            let currentValue = parseInt(input.value);
            const maxStock = parseInt(input.max);
            const newValue = currentValue + change;

            if (newValue >= 1 && newValue <= maxStock) {
                input.value = newValue;
                showLoading(); // Hiện loading
                document.getElementById(`form-update-${itemId}`).submit(); // Gửi form cập nhật
            } else if (newValue > maxStock) {
                alert(`Xin lỗi, chỉ còn ${maxStock} sản phẩm trong kho.`);
            }
        }

        // 3. HÀM XỬ LÝ MÃ GIẢM GIÁ (AJAX)
        const formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });
        let validVoucherCode = ""; // Biến lưu mã hợp lệ để gửi sang trang Checkout

        async function applyVoucher() {
            const codeInput = document.getElementById('voucher-code');
            const subtotalEl = document.getElementById('subtotal-display');

            const code = codeInput.value.trim();
            const subtotal = parseFloat(subtotalEl.dataset.value); // Lấy giá gốc

            if (!code) {
                showMessage("Vui lòng nhập mã.", "text-red-500");
                return;
            }

            // Hiệu ứng loading cho nút
            const btn = document.getElementById('btn-apply-voucher');
            const originalText = btn.innerText;
            btn.innerText = "Checking...";
            btn.disabled = true;

            try {
                // Gọi API VoucherController để kiểm tra mã
                const response = await fetch(`/api/Voucher/Check?code=${code}&totalAmount=${subtotal}`);
                const data = await response.json();

                if (data.success) {
                    // ÁP DỤNG THÀNH CÔNG
                    document.getElementById('discount-display').innerText = `-${formatter.format(data.discount)}`;
                    document.getElementById('total-display').innerText = formatter.format(data.finalTotal);

                    showMessage(data.message, "text-green-600");
                    validVoucherCode = data.voucherCode; // Lưu lại mã

                    // Khóa ô nhập
                    codeInput.classList.add("bg-gray-100", "text-gray-500");
                    codeInput.readOnly = true;
                    btn.innerText = "Đã dùng";
                } else {
                    // MÃ SAI / HẾT HẠN
                    showMessage(data.message, "text-red-500");
                    resetVoucher();
                    btn.innerText = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error(error);
                showMessage("Lỗi kết nối server.", "text-red-500");
                resetVoucher();
                btn.innerText = originalText;
                btn.disabled = false;
            }
        }

        // Hàm hiển thị thông báo nhỏ dưới ô nhập mã
        function showMessage(msg, colorClass) {
            const el = document.getElementById('voucher-message');
            el.textContent = msg;
            el.className = `text-xs mt-2 block font-semibold ${colorClass}`;
            el.classList.remove('hidden');
        }

        // Hàm reset về trạng thái ban đầu
        function resetVoucher() {
            validVoucherCode = "";
            document.getElementById('discount-display').innerText = "0₫";
            const subtotal = parseFloat(document.getElementById('subtotal-display').dataset.value);
            document.getElementById('total-display').innerText = formatter.format(subtotal);
        }

        // 4. HÀM CHUYỂN HƯỚNG THANH TOÁN
        function proceedToCheckout() {
            let url = '@Url.Action("Checkout", "Order")';
            // Nếu có mã giảm giá hợp lệ, gắn vào URL để gửi sang OrderController
            if (validVoucherCode) {
                url += `?voucherCode=${encodeURIComponent(validVoucherCode)}`;
            }
            window.location.href = url;
        }
    </script>
}