@model ASP_shopgiay.Controllers.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ ";
    // Không cần set Layout = null nữa, nó sẽ tự nhận _Layout.cshtml từ _ViewStart
}

<div class="container mx-auto px-4 py-8">

    <!-- 1. Banner/Hero Section -->
    <div class="bg-gradient-to-r from-indigo-600 to-blue-500 text-white rounded-3xl p-8 md:p-12 mb-12 shadow-xl relative overflow-hidden">
        <!-- Decorative Circles -->
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-64 h-64 rounded-full bg-white opacity-10"></div>
        <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-40 h-40 rounded-full bg-white opacity-10"></div>

        <div class="relative z-10 max-w-2xl">
            <span class="inline-block py-1 px-3 rounded-full bg-white/20 text-xs font-bold tracking-wider mb-4 border border-white/30">BST MỚI 2025</span>
            <h1 class="text-4xl md:text-6xl font-black mb-4 leading-tight">SNEAKER CHẤT <br /> GIÁ CỰC THẬT</h1>
            <p class="text-lg md:text-xl opacity-90 mb-8 font-light">Khám phá bộ sưu tập mới nhất từ Nike, Adidas, Puma và Bitis với ưu đãi lên đến 50%.</p>
            <a href="@Url.Action("List", "Product")" class="bg-white text-indigo-600 font-bold py-3.5 px-8 rounded-full inline-block hover:bg-indigo-50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
                Xem Tất Cả Sản Phẩm <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </div>

    <!-- 2. Khối Sản phẩm Nổi bật -->
    <section class="mb-16">
        <div class="flex justify-between items-end mb-8">
            <div>
                <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
                    <i class="fas fa-fire text-red-500"></i> Sản Phẩm Nổi Bật
                </h2>
                <div class="h-1 w-20 bg-red-500 mt-2 rounded-full"></div>
            </div>
            <a href="@Url.Action("List", "Product")" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800 transition">Xem thêm <i class="fas fa-chevron-right text-xs"></i></a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            @if (Model.SanPhamNoiBat.Any())
            {
                @foreach (var product in Model.SanPhamNoiBat)
                {
                    <partial name="_ProductCard" model="product" />
                }
            }
            else
            {
                <div class="col-span-full py-12 text-center bg-gray-50 rounded-xl border-2 border-dashed border-gray-200">
                    <p class="text-gray-500">Chưa có sản phẩm nổi bật nào.</p>
                </div>
            }
        </div>
    </section>

    <!-- 3. Khối Sản phẩm Mới -->
    <section class="mb-8">
        <div class="flex justify-between items-end mb-8">
            <div>
                <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
                    <i class="fas fa-star text-yellow-500"></i> Sản Phẩm Mới
                </h2>
                <div class="h-1 w-20 bg-yellow-500 mt-2 rounded-full"></div>
            </div>
            <a href="@Url.Action("List", "Product")" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800 transition">Xem thêm <i class="fas fa-chevron-right text-xs"></i></a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            @if (Model.SanPhamMoi.Any())
            {
                @foreach (var product in Model.SanPhamMoi)
                {
                    <partial name="_ProductCard" model="product" />
                }
            }
            else
            {
                <div class="col-span-full py-12 text-center bg-gray-50 rounded-xl border-2 border-dashed border-gray-200">
                    <p class="text-gray-500">Chưa có sản phẩm mới nào.</p>
                </div>
            }
        </div>
    </section>
</div>