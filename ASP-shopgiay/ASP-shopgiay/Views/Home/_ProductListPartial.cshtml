@model IEnumerable<ASP_shopgiay.Models.Sanpham>

@{
    bool isHomePageSource = ViewData["IsHome"] as bool? ?? false;
}
<style>
    /* ... (CSS giữ nguyên) ... */
</style>

@foreach (var item in Model)
{
    // Lấy giá thấp nhất từ thuộc tính tính toán
    decimal giaGoc = item.GiaBanThapNhat;
    decimal giaSauGiam = giaGoc;
    double giamPhanTram = 0;

    double rating = item.TrungBinhSao;
    int luotDanhGia = item.SoLuotDanhGia;

    var detailsUrl = Url.Action("Details", "ChiTietSP", new { id = item.MaSp });

    if (isHomePageSource)
    {
        detailsUrl += (detailsUrl.Contains("?") ? "&" : "?") + "source=Home";
    }

    @* GẮN data-id (MaSp) VÀ data-price (GiaBanThapNhat) CHO KEYSET PAGINATION *@
    <div class="col mb-5 product-card" data-id="@item.MaSp" data-price="@giaGoc">
        <div class="card h-100 shadow-sm product-card-hover position-relative">

            @if (giamPhanTram > 0)
            {
                <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                    Giảm @(giamPhanTram * 100)%
                </div>
            }

            <a href="@detailsUrl">
                <img class="card-img-top" src="~/images/products/@(string.IsNullOrEmpty(item.HinhAnh) ? "noimage.jpg" : item.HinhAnh)"
                     alt="@item.TenSp"
                     style="width: 100%; height: 200px; object-fit: cover;" />
            </a>

            <div class="text-center p-3">
                <a href="@detailsUrl" class="text-decoration-none text-dark fw-bold d-block mb-2">
                    <h5 class="mb-2">@item.TenSp</h5>
                </a>

                <div class="small text-warning mb-2 d-flex justify-content-center align-items-center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= rating)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else if (i - rating < 1 && i - rating > 0)
                        {
                            <i class="bi bi-star-half"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                    <span class="ms-2 text-muted" style="font-size: 0.8rem;">(@luotDanhGia)</span>
                </div>

                @if (giamPhanTram > 0)
                {
                    <span class="fw-bold text-danger d-block mb-1">@giaSauGiam.ToString("N0")đ</span>
                    <span class="text-decoration-line-through text-dark d-block">@giaGoc.ToString("N0")đ</span>
                }
                else
                {
                    <span class="fw-bold d-block text-danger">@giaGoc.ToString("N0")đ</span>
                }
            </div>

            <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" href="@detailsUrl">
                        <i class="bi bi-cart-plus me-1"></i> Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<div class="hasMoreFlag" data-hasmore="@ViewBag.HasMore" style="display:none;"></div>