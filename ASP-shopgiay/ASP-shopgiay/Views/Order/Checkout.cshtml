@model ASP_shopgiay.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh Toán";
    Layout = "_Layout";
}

<div class="bg-gray-50 min-h-screen py-12">
    <div class="container mx-auto px-4">

        <div class="max-w-6xl mx-auto">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-8 text-center">Tiến Hành Thanh Toán</h1>

            <form asp-action="Checkout" method="post">
                <div class="flex flex-col lg:flex-row gap-8">

                    <!-- CỘT TRÁI: THÔNG TIN GIAO HÀNG -->
                    <div class="lg:w-3/5">
                        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
                            <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                                <span class="w-8 h-8 bg-indigo-100 text-indigo-600 rounded-full flex items-center justify-center mr-3 text-sm font-bold">1</span>
                                Thông tin giao hàng
                            </h2>

                            <!-- Hiển thị lỗi validation tổng thể -->
                            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 text-sm bg-red-50 p-3 rounded-lg"></div>

                            <div class="space-y-5">
                                <!-- Họ tên -->
                                <div>
                                    <label asp-for="TenNguoiNhan" class="block text-sm font-bold text-gray-700 mb-1">Họ tên người nhận <span class="text-red-500">*</span></label>
                                    <input asp-for="TenNguoiNhan" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 py-2.5 px-3 transition" placeholder="Nhập họ tên đầy đủ" />
                                    <span asp-validation-for="TenNguoiNhan" class="text-red-500 text-xs mt-1"></span>
                                </div>

                                <!-- Số điện thoại -->
                                <div>
                                    <label asp-for="DienThoaiGiaoHang" class="block text-sm font-bold text-gray-700 mb-1">Số điện thoại <span class="text-red-500">*</span></label>
                                    <input asp-for="DienThoaiGiaoHang" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 py-2.5 px-3 transition" placeholder="Ví dụ: 0901234567" />
                                    <span asp-validation-for="DienThoaiGiaoHang" class="text-red-500 text-xs mt-1"></span>
                                </div>

                                <!-- Địa chỉ -->
                                <div>
                                    <label asp-for="DiaChiGiaoHang" class="block text-sm font-bold text-gray-700 mb-1">Địa chỉ nhận hàng <span class="text-red-500">*</span></label>
                                    <textarea asp-for="DiaChiGiaoHang" rows="3" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 py-2.5 px-3 transition" placeholder="Số nhà, tên đường, phường/xã, quận/huyện, tỉnh/thành phố"></textarea>
                                    <span asp-validation-for="DiaChiGiaoHang" class="text-red-500 text-xs mt-1"></span>
                                </div>

                                <!-- Ghi chú -->
                                <div>
                                    <label asp-for="GhiChu" class="block text-sm font-bold text-gray-700 mb-1">Ghi chú đơn hàng (Tùy chọn)</label>
                                    <textarea asp-for="GhiChu" rows="2" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 py-2.5 px-3 transition" placeholder="Ví dụ: Giao hàng giờ hành chính..."></textarea>
                                </div>
                            </div>

                            <!-- Phương thức thanh toán -->
                            <div class="mt-8 pt-8 border-t border-gray-100">
                                <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                                    <span class="w-8 h-8 bg-indigo-100 text-indigo-600 rounded-full flex items-center justify-center mr-3 text-sm font-bold">2</span>
                                    Phương thức thanh toán
                                </h2>

                                <div class="space-y-3">
                                    <!-- COD -->
                                    <label class="flex items-center p-4 border border-gray-200 rounded-xl cursor-pointer hover:bg-indigo-50 transition border-indigo-200 bg-indigo-50/30 ring-1 ring-indigo-200">
                                        <input type="radio" asp-for="MaPt" value="1" checked class="w-5 h-5 text-indigo-600 border-gray-300 focus:ring-indigo-500" />
                                        <div class="ml-3 flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                                                <i class="fas fa-money-bill-wave text-lg"></i>
                                            </div>
                                            <span class="font-bold text-gray-900">Thanh toán khi nhận hàng (COD)</span>
                                        </div>
                                    </label>

                                    <!-- Chuyển khoản (Disabled demo) -->
                                    <label class="flex items-center p-4 border border-gray-200 rounded-xl cursor-not-allowed opacity-60 bg-gray-50">
                                        <input type="radio" asp-for="MaPt" value="2" disabled class="w-5 h-5 text-gray-400 border-gray-300" />
                                        <div class="ml-3 flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                                                <i class="fas fa-university text-lg"></i>
                                            </div>
                                            <div class="flex flex-col">
                                                <span class="font-medium text-gray-500">Chuyển khoản ngân hàng</span>
                                                <span class="text-xs text-red-500">(Đang bảo trì)</span>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CỘT PHẢI: TÓM TẮT ĐƠN HÀNG -->
                    <div class="lg:w-2/5">
                        <div class="bg-white p-8 rounded-2xl shadow-lg border border-indigo-100 sticky top-24">
                            <h2 class="text-lg font-bold text-gray-800 mb-6 pb-4 border-b border-gray-100 flex justify-between items-center">
                                <span>Đơn hàng của bạn</span>
                                <span class="text-sm font-normal text-gray-500">@Model.CartItems.Sum(i => i.SoLuong) sản phẩm</span>
                            </h2>

                            <!-- Danh sách sản phẩm nhỏ -->
                            <div class="space-y-4 mb-6 max-h-80 overflow-y-auto pr-2 custom-scrollbar">
                                @foreach (var item in Model.CartItems)
                                {
                                    <div class="flex gap-4 items-start">
                                        <div class="w-16 h-16 rounded-lg border border-gray-200 overflow-hidden flex-shrink-0 relative bg-gray-50">
                                            @{
                                                string imgUrl = item.HinhAnh;
                                                if (!string.IsNullOrEmpty(imgUrl) && !imgUrl.StartsWith("http") && !imgUrl.StartsWith("/"))
                                                {
                                                    imgUrl = $"/images/products/{imgUrl}";
                                                }
                                            }
                                            <img src="@imgUrl" class="w-full h-full object-cover" onerror="this.src='https://placehold.co/100x100/e2e8f0/64748b?text=No+Image'" />
                                            <span class="absolute top-0 right-0 bg-gray-500 text-white text-[10px] w-5 h-5 flex items-center justify-center rounded-bl-lg font-bold shadow-sm">x@(item.SoLuong)</span>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h4 class="text-sm font-bold text-gray-900 line-clamp-2 mb-1">@item.TenSanpham</h4>
                                            <p class="text-xs text-gray-500 bg-gray-100 inline-block px-2 py-0.5 rounded">@item.TenMau / @item.TenKichThuoc</p>
                                        </div>
                                        <div class="text-sm font-bold text-gray-700 whitespace-nowrap">
                                            @((item.DonGia * item.SoLuong).ToString("N0"))₫
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="border-t border-gray-100 pt-4 space-y-3">
                                <div class="flex justify-between text-sm text-gray-600">
                                    <span>Tạm tính:</span>
                                    <span class="font-medium">@Model.TongTien.ToString("N0")₫</span>
                                </div>
                                <div class="flex justify-between text-sm text-gray-600">
                                    <span>Phí vận chuyển:</span>
                                    <span class="font-medium text-indigo-600">0₫</span>
                                </div>
                                <div class="flex justify-between text-base font-bold text-gray-900 pt-4 border-t border-dashed border-gray-200 items-end">
                                    <span>Tổng cộng:</span>
                                    <span class="text-2xl font-black text-red-600">@((Model.TongTien + 30000).ToString("N0"))₫</span>
                                </div>
                                <p class="text-xs text-gray-400 text-right italic">(Đã bao gồm VAT)</p>
                            </div>

                            <button type="submit" class="w-full mt-8 bg-indigo-600 text-white font-bold py-4 rounded-xl shadow-lg hover:bg-indigo-700 hover:shadow-xl transition transform hover:-translate-y-0.5 flex justify-center items-center gap-2">
                                <i class="fas fa-lock text-sm"></i> ĐẶT HÀNG NGAY
                            </button>

                            <div class="mt-4 text-center">
                                <a href="@Url.Action("Index", "Cart")" class="text-sm text-gray-500 hover:text-indigo-600 transition flex items-center justify-center gap-1">
                                    <i class="fas fa-arrow-left text-xs"></i> Quay lại giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}