<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopGiay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @* --- CSS TÙY CHỈNH CHO FORM ĐĂNG KÝ/ĐĂNG NHẬP --- *@
    <style>
        body {
            background-color: #f0f2f5; /* Màu nền nhẹ */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .auth-container {
            width: 800px; /* Chiều rộng cố định cho form */
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .left-panel {
            background-color: #fff;
            padding: 40px;
        }

        .right-panel {
            background-color: #ff3c69; /* Màu hồng nổi bật */
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .right-panel h1 {
                font-weight: 700;
            }

        .form-control {
            border-radius: 5px;
            height: 48px;
            background-color: #f5f5f5; /* Làm trường nhập màu xám nhạt */
            border: none;
        }

        /* Cần điều chỉnh lại input-group cho nút mắt */
        .input-group > .form-control {
            z-index: 0;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        @RenderBody() @* Nơi chứa code form Register/Login *@
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>