@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject ASP_shopgiay.Data.ApplicationDbContext Context
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    // 1. LẤY DANH MỤC (Không cần DistinctBy nữa vì Database đã sạch)
    var categories = Context.Danhmucs!
        .Include(d => d.InverseParent)
        .Where(dm => dm.ParentId == null && dm.TrangThai == true)
        .OrderBy(d => d.ThuTu)
        .ToList();

    // 2. XỬ LÝ USER & GIỎ HÀNG
    var userName = HttpContextAccessor.HttpContext?.User.FindFirst(ClaimTypes.Name)?.Value;
    var maTk = HttpContextAccessor.HttpContext?.User.FindFirst("MaTK")?.Value;
    int cartCount = 0;

    if (!string.IsNullOrEmpty(maTk) && int.TryParse(maTk, out int userId))
    {
        // Đếm tổng số lượng sản phẩm trong giỏ hàng
        cartCount = Context.Giohangs!.Where(gh => gh.MaTk == userId).Sum(gh => gh.SoLuong ?? 0);
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopGiay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        /* Hiệu ứng Dropdown */
        .group:hover .group-hover\:visible {
            visibility: visible;
        }

        .group:hover .group-hover\:opacity-100 {
            opacity: 1;
        }

        .group:hover .group-hover\:translate-y-0 {
            transform: translateY(0);
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">

    <!-- HEADER -->
    <header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
        <div class="container mx-auto px-4 h-20 flex justify-between items-center">

            <!-- LOGO -->
            <a href="/" class="flex items-center gap-2 group">
                <div class="bg-indigo-600 text-white p-2 rounded-lg transform group-hover:rotate-12 transition">
                    <i class="fas fa-shoe-prints text-xl"></i>
                </div>
                <span class="text-2xl font-black text-indigo-900 tracking-tight">SHOPGIAY</span>
            </a>

            <!-- MENU CHÍNH -->
            <nav class="hidden lg:flex items-center gap-8">
                @foreach (var category in categories)
                {
                    // Kiểm tra danh mục con trực tiếp từ Database
                    var subCategories = category.InverseParent!.Where(s => s.TrangThai == true).ToList();
                    bool hasChildren = subCategories.Any();

                    <div class="relative group py-6">
                        <a href="@(hasChildren ? "#" : Url.Action("List", "Product", new { categoryId = category.MaDm }))"
                           class="flex items-center gap-1 text-sm font-bold text-gray-600 hover:text-indigo-600 transition uppercase tracking-wide">
                            @category.Ten
                            @if (hasChildren)
                            {
                                <i class="fas fa-chevron-down text-xs opacity-50 mt-0.5"></i>
                            }
                        </a>

                        <!-- DROPDOWN MENU -->
                        @if (hasChildren)
                        {
                            <div class="absolute top-full left-0 w-56 bg-white rounded-xl shadow-xl border border-gray-100 p-2 invisible opacity-0 translate-y-2 transition-all duration-200 group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 z-50">
                                @foreach (var subItem in subCategories)
                                {
                                    <a href="@Url.Action("List", "Product", new { categoryId = subItem.MaDm })"
                                       class="block px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-indigo-50 hover:text-indigo-600 transition">
                                        @subItem.Ten
                                    </a>
                                }
                            </div>
                        }
                    </div>
                }
            </nav>

            <!-- RIGHT ACTIONS (Giỏ hàng & User) -->
            <div class="flex items-center gap-4">
                <!-- Search -->
                <div class="hidden md:block relative">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
                    <input type="text" placeholder="Tìm kiếm..." class="bg-gray-100 border-none rounded-full pl-9 pr-4 py-2 text-sm focus:ring-2 focus:ring-indigo-200 w-40 transition-all focus:w-60 outline-none">
                </div>

                <!-- Giỏ hàng -->
                <a href="@Url.Action("Index", "Cart")" class="relative p-2 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded-full transition">
                    <i class="fas fa-shopping-bag text-xl"></i>
                    @if (cartCount > 0)
                    {
                        <span class="absolute top-0 right-0 bg-red-500 text-white text-[10px] font-bold px-1.5 py-0.5 rounded-full shadow-sm transform translate-x-1/4 -translate-y-1/4">
                            @cartCount
                        </span>
                    }
                </a>

                <!-- User Auth -->
                @if (User.Identity!.IsAuthenticated)
                {
                    <!-- KHU VỰC ĐÃ ĐĂNG NHẬP -->
                    <div class="relative group py-4">
                        <button class="flex items-center gap-2 focus:outline-none transition hover:text-indigo-600">
                            <!-- Avatar tạo tự động theo tên -->
                            <img src="https://ui-avatars.com/api/?name=@userName&background=random&color=fff" alt="User" class="w-9 h-9 rounded-full border-2 border-indigo-100 shadow-sm">
                            <span class="hidden md:block text-sm font-semibold text-gray-700 group-hover:text-indigo-600">@userName</span>
                            <i class="fas fa-caret-down text-gray-400 text-xs group-hover:text-indigo-600 transition"></i>
                        </button>

                        <!-- Menu thả xuống (Dropdown) -->
                        <div class="absolute right-0 top-full mt-0 w-56 bg-white rounded-xl shadow-xl border border-gray-100 overflow-hidden invisible opacity-0 translate-y-2 transition-all duration-200 group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 z-50">

                            <!-- Header của menu -->
                            <div class="px-4 py-3 bg-indigo-50/50 border-b border-gray-100">
                                <p class="text-xs text-gray-500 uppercase font-bold tracking-wider">Tài khoản</p>
                                <p class="text-sm font-bold text-indigo-900 truncate mt-0.5">@userName</p>
                            </div>

                            <!-- Các liên kết -->
                            <div class="py-1">
                                <a href="@Url.Action("Profile", "Account")" class="flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 transition group/item">
                                    <span class="w-8 h-8 rounded-full bg-gray-100 text-gray-500 flex items-center justify-center mr-3 group-hover/item:bg-indigo-200 group-hover/item:text-indigo-700 transition">
                                        <i class="fas fa-user-circle"></i>
                                    </span>
                                    Hồ sơ cá nhân
                                </a>

                                <a href="@Url.Action("History", "Order")" class="flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 transition group/item">
                                    <span class="w-8 h-8 rounded-full bg-gray-100 text-gray-500 flex items-center justify-center mr-3 group-hover/item:bg-indigo-200 group-hover/item:text-indigo-700 transition">
                                        <i class="fas fa-box-open"></i>
                                    </span>
                                    Đơn mua
                                </a>
                            </div>

                            <div class="border-t border-gray-100"></div>

                            <!-- Nút Đăng xuất -->
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="w-full text-left flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition group/item font-medium">
                                    <span class="w-8 h-8 rounded-full bg-red-50 text-red-500 flex items-center justify-center mr-3 group-hover/item:bg-red-200 group-hover/item:text-red-700 transition">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </span>
                                    Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="text-sm font-bold text-gray-600 hover:text-indigo-600 px-3 py-2 rounded-lg hover:bg-gray-100 transition">
                        Đăng nhập
                    </a>
                    <a href="@Url.Action("Register", "Account")" class="text-sm font-bold bg-indigo-600 text-white px-5 py-2.5 rounded-full shadow-md hover:bg-indigo-700 hover:shadow-lg transition transform hover:-translate-y-0.5">
                        Đăng ký
                    </a>
                }
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-gray-900 text-gray-300 pt-16 pb-8">
        <div class="container mx-auto px-4">
            <!-- ... (Nội dung Footer giữ nguyên như cũ) ... -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
                <div>
                    <div class="flex items-center gap-2 mb-6">
                        <i class="fas fa-shoe-prints text-2xl text-indigo-500"></i>
                        <span class="text-2xl font-black text-white tracking-tight">SHOPGIAY</span>
                    </div>
                    <p class="text-gray-400 text-sm leading-relaxed mb-6">
                        Điểm đến số 1 cho các tín đồ sneaker.
                    </p>
                </div>
                <!-- ... -->
            </div>
            <div class="border-t border-gray-800 pt-8 text-center">
                <p class="text-sm text-gray-500">&copy; @DateTime.Now.Year ShopGiay. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>