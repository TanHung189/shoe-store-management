@model ASP_shopgiay.ViewModels.ProductCardViewModel

<!-- Sửa lỗi liên kết: Đảm bảo sử dụng Tag Helper hoặc Url.Action đúng -->
<a asp-controller="Product" asp-action="Detail" asp-route-productId="@Model.MaSP"
   class="block bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-1 p-4 cursor-pointer group">

    <!-- Nội dung còn lại của thẻ sản phẩm... -->
    <div class="aspect-square overflow-hidden rounded-lg bg-gray-100 mb-3">
        <!-- Ảnh Sản Phẩm -->
        <img src="/images/products/@Model.HinhAnh"
             alt="@Model.TenSP"
             onerror="this.onerror=null; this.src='https://placehold.co/400x400/cccccc/333333?text=No+Image'"
             class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
    </div>

    <!-- Thông tin Sản phẩm -->
    <div class="flex flex-col h-24">
        <!-- Thương hiệu -->
        <p class="text-xs font-semibold uppercase text-indigo-600">@Model.TenThuongHieu</p>

        <!-- Tên Sản phẩm -->
        <h3 class="text-sm font-bold text-gray-800 line-clamp-2 mt-1 min-h-[40px]">
            @Model.TenSP
        </h3>

        <!-- Giá -->
        <div class="mt-auto pt-2">
            @if (Model.GiaThapNhat > 0)
            {
                <span class="text-lg font-extrabold text-red-600">
                    @Model.GiaThapNhat.ToString("N0")₫
                </span>
            }
            else
            {
                <span class="text-lg font-extrabold text-gray-400">Liên hệ</span>
            }
        </div>
    </div>
</a>